        <Border Grid.Row="0" BorderBrush="#FF4E4A4A" BorderThickness="5,5,2,2" Margin="2"/>
        <UniformGrid Rows="6" Columns="4" Grid.Row="1">
            <Button Content="%" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
