            <Button Content="1/x" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="x²" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="√x" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="÷" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="7" FontSize="18" BorderBrush="Black"/>
            <Button Content="8" FontSize="18" BorderBrush="Black"/>
            <Button Content="9" FontSize="18" BorderBrush="Black"/>
            <Button Content="ˣ" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="4" FontSize="18" BorderBrush="Black"/>
            <Button Content="5" FontSize="18" BorderBrush="Black"/>
            <Button Content="6" FontSize="18" BorderBrush="Black"/>
            <Button Content="-" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="1" FontSize="18" BorderBrush="Black"/>
            <Button Content="2" FontSize="18" BorderBrush="Black"/>
            <Button Content="3" FontSize="18" BorderBrush="Black"/>
            <Button Content="+" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
            <Button Content="+/-" FontSize="18" BorderBrush="Black"/>
            <Button Content="0" FontSize="18" BorderBrush="Black"/>
            <Button Content="," FontSize="18" BorderBrush="Black"/>
            <Button Content="=" FontSize="18" Background="#FF999999" BorderBrush="Black"/>
